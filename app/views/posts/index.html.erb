
<div class="main">
  <div>
    <h2>スケジュール一覧</h2>
  </div>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>終日</th>
        <th>スケジュール更新日時</th>
        <th>確認</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.start %></td>
          <td><%= post.finish %></td>
          <% if post.all_day%>
            <td><%= "◯" %></td>
          <% else %>
            <td><%= "" %></td>
          <% end %>
          <td><%= post.updated_at %></td>
          <td><%= link_to("確認", "/posts/#{post.id}")%></td>
          <td>編集</td>
          <td>削除</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to("スケジュール新規登録", "/posts/new") %>
</div>
