
<div class="main">
  <h2>スケジュール新規作成</h2>

  <%= form_with model: @post do |f| %>
    <table>
      <tr>
        <th><%= f.label :title ,"タイトル"%></th>
        <td><%= f.text_field :title %> </td>
      </tr>
      <tr>
        <th><%= f.label :start ,"開始日"%></th>
        <td><%= f.date_field :start %></td>
      </tr>
      <tr>
        <th><%= f.label :finish ,"終了日"%></th>
        <td><%= f.date_field :finish %></td>
      </tr>
      <tr>
        <th><%= f.label :all_day ,"終日"%></th>
        <td><%= f.check_box :all_day %></td>
      </tr>
      <tr>
        <th><%= f.label :memo ,"スケジュールメモ"%></th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </table>
    <ul>
      <li>
        <p><%= f.submit "スケジュールを新規登録する"%></p>
        <p><%= link_to("スケジュール一覧に戻る", "/posts/index") %></p>
      </li>
    </ul>
  <% end %>
</div>